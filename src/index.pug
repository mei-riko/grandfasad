                                    .product__image__default(style="background-image: url('/img/product-3.jpg');")
                                .product__info
                                    span.product__type Панель
                                    span.sep —
                                    span.product_article АРТ. 003
                                .product__name Песчаник тигровый
                        .col-md-6.col-lg-4.col-xl-4
                            a.product(href="/product.html")
                                .product__image
                                    .product__image__style(style="background-image: url('/img/product-style-1.jpg');")
                                    .product__image__default(style="background-image: url('/img/product-4.jpg');")
                                .product__info
                                    span.product__type Панель
                                    span.sep —
                                    span.product_article АРТ. 008
                                .product__name Кварцит золотистый 
                        .col-md-6.col-lg-4.col-xl-4
                            a.product(href="/product.html")
                                .product__image
                                    .product__image__style(style="background-image: url('/img/product-style-1.jpg');")
                                    .product__image__default(style="background-image: url('/img/product-5.jpg');")
                                .product__info
                                    span.product__type Панель
